# Copy this file to .env for local development: cp apps/api/.env.example apps/api/.env

# Prisma/PostgreSQL connection used by the API and CLI tooling
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillforge

# Optional: adjust Prisma client logging (comma-separated: query,info,warn,error)
PRISMA_LOG_LEVEL=warn,info,error

# Optional: enable Redis-backed caching/queues when a Redis instance is available
REDIS_URL=redis://localhost:6379

# Optional: override default partner credentials (JSON array)
# PARTNER_CREDENTIALS=[{"partnerId":"your-partner-id","apiKey":"sk_live_xxx","apiSecret":"sh_live_xxx","sandboxEnabled":true}]
